<form action="/users/{{user.id}}?_method=PUT" method="POST">
  <div class="form-row mb-3">
    <label class="form-label" for="employeeCode">員工編號</label>
    <input class="form-control" type="text" class="form-control-file" id="employeeCode" name="employeeCode" value="{{user.employeeCode}}" disabled>
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="password">密碼</label>
    <input class="form-control" type="password" class="form-control-file" id="password" name="password">
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="confirmPassword">確認密碼</label>
    <input class="form-control" type="password" class="form-control-file" id="confirmPassword" name="confirmPassword">
  </div>
  <button type="submit" class="btn btn-primary">輸入</button>
  <a href="/dashboard">返回</a>
</form>